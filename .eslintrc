{
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "impliedStrict": true,
            "modules": true
        }
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "yandex"
    ],
    "rules": {
        "react/jsx-uses-react": 1,
        "react/jsx-no-undef": 2,
        "react/wrap-multilines": 2
    },
    "env": {
        "browser": true,
        "node": true
    },
    "plugins": [
        "react",
//        "react-native"
    ],
    "parser": "babel-eslint",
    "globals": {
        "document": true,
        "window": true,
        "console": true
    }
}
